<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Tạo Hợp Đồng"
            app:titleTextColor="@android:color/white"/>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Chọn khách hàng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <Spinner
                    android:id="@+id/spinnerKhachHang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/edit_text"/>
                <!-- Loại tài sản -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loại tài sản *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <Spinner
                    android:id="@+id/spinnerLoaiTS"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/edit_text"/>

                <!-- Ngày cầm -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ngày cầm *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/edtNgayCam"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="dd/MM/yyyy"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"/>

                    <Button
                        android:id="@+id/btnChonNgayCam"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Chọn"/>
                </LinearLayout>

                <!-- Ngày đáo hạn -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ngày đáo hạn *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/edtNgayDaoHan"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="dd/MM/yyyy"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"/>

                    <Button
                        android:id="@+id/btnChonNgayDaoHan"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Chọn"/>
                </LinearLayout>

                <!-- Số tiền cho -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Số tiền cho vay *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/edtSoTienCho"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Nhập số tiền (VNĐ)"
                    android:inputType="numberDecimal"/>

                <!-- Lãi suất -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Lãi suất (%/tháng) *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/edtLaiSuat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Ví dụ: 3.5"
                    android:inputType="numberDecimal"/>

                <!-- Trạng thái -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Trạng thái"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <Spinner
                    android:id="@+id/spinnerTrangThai"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/edit_text"/>

                <!-- Ghi chú -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ghi chú"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/edtGhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:hint="Ghi chú thêm..."
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="4"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnHuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hủy"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/btnLuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Lưu"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>