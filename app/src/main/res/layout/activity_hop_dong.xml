<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Quản Lý Hợp Đồng"
        app:titleTextColor="@android:color/white"/>

    <!-- Filter Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnTatCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnDangCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang cầm"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnDaChuoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã chuộc"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnQuaHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quá hạn"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHopDong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <!-- Empty View -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Chưa có hợp đồng nào"
        android:textSize="16sp"
        android:textColor="#999999"
        android:gravity="center"
        android:visibility="gone"/>

    <!-- Button Thêm -->
    <Button
        android:id="@+id/btnThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="+ Tạo Hợp Đồng Mới"
        android:textSize="16sp"/>

</LinearLayout>