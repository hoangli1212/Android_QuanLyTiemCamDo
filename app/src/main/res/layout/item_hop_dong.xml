<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMaHD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HĐ #001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang cầm"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Khách hàng -->
        <TextView
            android:id="@+id/tvKhachHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nguyễn Văn A"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <!-- Số tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền: "
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvSoTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000,000 đ"
                android:textSize="14sp"
                android:textColor="#E91E63"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Lãi suất -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lãi suất: "
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvLaiSuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3%/tháng"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Ngày cầm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày cầm: "
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvNgayCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2024"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Ngày đáo hạn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáo hạn: "
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvNgayDaoHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/04/2024"
                android:textSize="14sp"
                android:textColor="#FF9800"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnXem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Sửa"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Xóa"
                android:textColor="#F44336"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>