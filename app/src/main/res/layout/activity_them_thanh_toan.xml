<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Thanh Toán"
            app:titleTextColor="@android:color/white"/>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Chọn hợp đồng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hợp đồng *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <Spinner
                    android:id="@+id/spinnerHopDong"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/edit_text"/>

                <!-- Thông tin hợp đồng -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardThongTinHD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvThongTinKH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Khách hàng: Nguyễn Văn A"
                            android:textSize="14sp"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tvSoTienGoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tiền gốc: 10,000,000 đ"
                            android:textSize="14sp"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tvLaiSuat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Lãi suất: 3%/tháng"
                            android:textSize="14sp"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tvTienLai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tiền lãi dự tính: 900,000 đ"
                            android:textSize="14sp"
                            android:textColor="#F44336"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvTongTien"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tổng cộng: 10,900,000 đ"
                            android:textSize="16sp"
                            android:textColor="#E91E63"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Loại thanh toán -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loại thanh toán *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <Spinner
                    android:id="@+id/spinnerLoaiThanhToan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/edit_text"/>

                <!-- Số tiền thanh toán -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Số tiền thanh toán *"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/edtSoTienThanhToan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Nhập số tiền (VNĐ)"
                    android:inputType="numberDecimal"/>

                <Button
                    android:id="@+id/btnTinhToan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tính toán tự động"
                    style="?android:attr/borderlessButtonStyle"/>

                <!-- Ghi chú -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ghi chú"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/edtGhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:hint="Ghi chú thêm..."
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="4"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnHuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hủy"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/btnLuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Thanh Toán"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>